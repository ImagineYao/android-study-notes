<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabItemSelected">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabItemUnSelected">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HollowButton">
        <item name="android:background">@drawable/button_hollow</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/clickable_text</item>
    </style>

    <style name="SolidButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_solid</item>
    </style>
</resources>